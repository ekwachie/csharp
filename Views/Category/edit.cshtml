@model Category
<div class="container">
   <form action="" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3 p-1">
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" id="" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" id="" class="form-control">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                 <a asp-controller="category" asp-action="index" class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
   </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
